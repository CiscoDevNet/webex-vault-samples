    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask App",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "people_me_flask.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Simple App",
            "type": "python",
            "request": "launch",
            "program": "people_me.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}